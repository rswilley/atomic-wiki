@page
@model PostsModel
@{
    ViewData["Title"] = "Posts";
}

@section Styles {
    <style>
        .post-card {
            transition: box-shadow 0.15s ease, transform 0.15s ease;
        }

        .post-card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.08);
            transform: translateY(-2px);
        }
    </style>
}

<h1 class="h4 mb-3">Posts</h1>

<!-- Filters / controls -->
<section class="mb-3">
    <form method="get" class="row g-2 align-items-end">
        <div class="col-12 col-md-4">
            <label class="form-label small text-muted">Search</label>
            <input name="q"
                   value="@Model.Query"
                   class="form-control form-control-sm"
                   placeholder="Search posts..." />
        </div>

        <div class="col-6 col-md-3">
            <label class="form-label small text-muted">Tag</label>
            <input name="tag"
                   value="@Model.Tag"
                   class="form-control form-control-sm"
                   placeholder="Filter by tag..." />
        </div>

        <div class="col-6 col-md-3">
            <label class="form-label small text-muted">Order</label>
            <select name="order"
                    class="form-select form-select-sm">
                <option value="desc" selected="@("desc".Equals(Model.Order, StringComparison.OrdinalIgnoreCase))">
                    Newest first
                </option>
                <option value="asc" selected="@("asc".Equals(Model.Order, StringComparison.OrdinalIgnoreCase))">
                    Oldest first
                </option>
            </select>
        </div>

        <div class="col-12 col-md-2 d-grid">
            <button type="submit" class="btn btn-sm btn-outline-secondary">
                Apply
            </button>
        </div>
    </form>
</section>

<!-- Posts grid -->
<section>
    @if (Model.Posts.Any())
    {
        <div class="row g-3">
            @foreach (var post in Model.Posts)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <article class="card h-100 post-card">
                        <div class="card-body d-flex flex-column">
                            <div class="small text-muted mb-1">
                                @post.CreatedAt.ToString("yyyy-MM-dd")
                            </div>

                            <h2 class="h6 mb-2">
                                <a asp-page="/View"
                                   asp-route-permanentId="@post.Id"
                                   asp-route-slug="@post.Slug"
                                   class="stretched-link text-decoration-none">
                                    @post.Title
                                </a>
                            </h2>

                            @if (!string.IsNullOrWhiteSpace(post.Excerpt))
                            {
                                <p class="card-text small text-muted mb-2">
                                    @post.Excerpt
                                </p>
                            }

                            @if (post.Tags?.Any() == true)
                            {
                                <div class="mt-auto pt-1">
                                    <div class="d-flex flex-wrap gap-1 small">
                                        @foreach (var tag in post.Tags)
                                        {
                                            <span class="badge bg-light text-dark border">@tag</span>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    </article>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted small">
            No posts found.
            <a asp-page="/Compose" asp-route-type="post">Create your first post</a>.
        </p>
    }
</section>
