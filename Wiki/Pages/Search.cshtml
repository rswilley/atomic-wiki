@page
@model SearchModel
@{
    ViewData["Title"] = "Search";
}

@section Styles {
    <style>
        .search-result-item {
            transition: box-shadow 0.15s ease, transform 0.15s ease;
        }

        .search-result-item:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.06);
            transform: translateY(-1px);
        }
    </style>
}

<h1 class="h4 mb-3">Search</h1>

<!-- Search bar + filters -->
<section class="mb-3">
    <form method="get" class="card">
        <div class="card-body py-2 px-3">
            <div class="row g-2 align-items-end">
                <!-- Query -->
                <div class="col-12 col-md-5">
                    <label class="form-label small text-muted">Search</label>
                    <input asp-for="Query"
                           name="q"
                           class="form-control form-control-sm"
                           placeholder="Search notes, posts, and journal..." />
                </div>

                <!-- Type -->
                <div class="col-6 col-md-2">
                    <label class="form-label small text-muted">Type</label>
                    <select name="type" class="form-select form-select-sm">
                        <option value="">All</option>
                        <option value="note" selected="@("note".Equals(Model.TypeFilter, StringComparison.OrdinalIgnoreCase))">Notes</option>
                        <option value="post" selected="@("post".Equals(Model.TypeFilter, StringComparison.OrdinalIgnoreCase))">Posts</option>
                        <option value="journal" selected="@("journal".Equals(Model.TypeFilter, StringComparison.OrdinalIgnoreCase))">Journal</option>
                    </select>
                </div>

                <!-- Category -->
                <div class="col-6 col-md-2">
                    <label class="form-label small text-muted">Category</label>
                    <input name="category"
                           value="@Model.CategoryFilter"
                           class="form-control form-control-sm"
                           placeholder="Category..." />
                </div>

                <!-- Order -->
                <div class="col-6 col-md-2">
                    <label class="form-label small text-muted">Order</label>
                    <select name="order" class="form-select form-select-sm">
                        <option value="relevance" selected="@("relevance".Equals(Model.Order, StringComparison.OrdinalIgnoreCase))">Relevance</option>
                        <option value="newest" selected="@("newest".Equals(Model.Order, StringComparison.OrdinalIgnoreCase))">Newest</option>
                        <option value="oldest" selected="@("oldest".Equals(Model.Order, StringComparison.OrdinalIgnoreCase))">Oldest</option>
                    </select>
                </div>

                <!-- Submit -->
                <div class="col-6 col-md-1">
                    <button type="submit" class="btn btn-sm btn-primary w-100">
                        Go
                    </button>
                </div>
            </div>

            <div class="mt-1 small text-muted">
                @if (!string.IsNullOrWhiteSpace(Model.Query))
                {
                    <span>
                        Showing results for <strong>"@Model.Query"</strong>.
                        @if (Model.TotalResults > 0)
                        {
                            <span> @Model.TotalResults result@((Model.TotalResults == 1) ? "" : "s").</span>
                        }
                        else
                        {
                            <span> No results.</span>
                        }
                    </span>
                }
                else
                {
                    <span>Type a query and press Go to search.</span>
                }
            </div>
        </div>
    </form>
</section>

<!-- Results -->
<section class="search-results">
    @if (!string.IsNullOrWhiteSpace(Model.Query))
    {
        @if (Model.Results.Any())
        {
            <ul class="list-unstyled mb-0">
                @foreach (var item in Model.Results)
                {
                    <li class="search-result-item card mb-2">
                        <div class="card-body py-2 px-3">
                            <div class="d-flex justify-content-between align-items-start mb-1">
                                <div>
                                    <div class="small text-muted">
                                        @item.DisplayDate
                                        &nbsp;•&nbsp;
                                        <span class="badge bg-light text-dark border text-uppercase small">
                                            @item.Type
                                        </span>
                                        @if (!string.IsNullOrWhiteSpace(item.Category))
                                        {
                                            <span class="ms-1">
                                                • <a asp-page="/Category" asp-route-slug="@item.CategorySlug">@item.Category</a>
                                            </span>
                                        }
                                    </div>

                                    <h2 class="h6 mb-1">
                                        <a asp-page="/Page"
                                           asp-route-slug="@item.Slug"
                                           class="text-decoration-none">
                                            @item.Title
                                        </a>
                                    </h2>
                                </div>

                                @if (item.Score.HasValue)
                                {
                                    <span class="small text-muted ms-2 d-none d-md-inline">
                                        score @item.Score.Value.ToString("0.00")
                                    </span>
                                }
                            </div>

                            @if (!string.IsNullOrWhiteSpace(item.Snippet))
                            {
                                <p class="small text-muted mb-1">
                                    @item.Snippet
                                </p>
                            }

                            @if (item.Tags?.Any() == true)
                            {
                                <div class="d-flex flex-wrap gap-1 small">
                                    @foreach (var tag in item.Tags)
                                    {
                                        <a asp-page="/Tag"
                                           asp-route-slug="@tag.Slug"
                                           class="badge bg-light text-dark border">
                                            #@tag.Name
                                        </a>
                                    }
                                </div>
                            }
                        </div>
                    </li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted small mt-2">
                No results matched your search. Try a different query or remove some filters.
            </p>
        }
    }
</section>
