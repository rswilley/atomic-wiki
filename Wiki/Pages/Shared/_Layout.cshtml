@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Atomic Wiki";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Atomic Wiki</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<div class="atomic-layout d-flex flex-lg-row flex-column">
    <!-- Sidebar -->
    <aside id="atomicSidebar" class="atomic-sidebar border-end d-lg-block">
        @await Html.PartialAsync("_NavSidebar")
    </aside>

    <!-- Mobile overlay -->
    <div id="atomicOverlay" class="atomic-overlay d-lg-none" onclick="toggleSidebar(false)"></div>

    <!-- Main area -->
    <div class="atomic-main flex-grow-1 d-flex flex-column">
        <!-- Top bar -->
        <header class="atomic-topbar border-bottom d-flex align-items-center justify-content-between px-3">
            <div class="d-flex align-items-center gap-2">
                <!-- Mobile menu button -->
                <button class="btn btn-sm btn-outline-secondary d-lg-none" type="button"
                        onclick="toggleSidebar()">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <span class="fw-bold">Atomic Wiki</span>
                <span class="badge bg-secondary d-none d-sm-inline">Local</span>
            </div>

            <div class="d-flex align-items-center gap-2">
                <a asp-page="/Notes" class="btn btn-sm btn-outline-secondary d-none d-sm-inline-flex">Notes</a>
                <a asp-page="/Timeline" class="btn btn-sm btn-outline-secondary d-none d-sm-inline-flex">Timeline</a>
                <a asp-page="/NewNote" class="btn btn-sm btn-primary">New Note</a>
            </div>
        </header>

        <!-- Content -->
        <main class="atomic-content flex-grow-1">
            @RenderBody()
        </main>
    </div>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js"></script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
