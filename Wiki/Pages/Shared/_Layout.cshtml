@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "Atomic Wiki";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@title - Atomic Wiki</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/typeahead/jquery.typeahead.min.css">
    <link rel="stylesheet" href="~/css/site.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
<div class="atomic-layout d-flex flex-lg-row flex-column">
    <!-- Sidebar -->
    <aside id="atomicSidebar" class="atomic-sidebar border-end d-lg-block">
        @await Html.PartialAsync("_NavSidebar")
    </aside>

    <!-- Mobile overlay -->
    <div id="atomicOverlay" class="atomic-overlay d-lg-none" onclick="toggleSidebar(false)"></div>

    <!-- Main area -->
    <div class="atomic-main flex-grow-1 d-flex flex-column">
        <!-- Top bar -->
        <header class="atomic-topbar border-bottom d-flex align-items-center justify-content-between px-3">
            <div class="d-flex align-items-center gap-2">
                <!-- Mobile menu button -->
                <button class="btn btn-sm btn-outline-secondary d-lg-none" type="button"
                        onclick="toggleSidebar()">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <span class="fw-bold">Atomic Wiki</span>
                <span class="badge bg-secondary d-none d-sm-inline">Local</span>
            </div>

            <div class="d-flex align-items-center gap-2">
                <div class="dropdown">
                    <button class="btn btn-sm btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Compose
                    </button>
                    <ul class="dropdown-menu">
                        <li><a asp-page="/Compose" asp-route-type="note" class="dropdown-item">Note</a></li>
                        <li><a asp-page="/Compose" asp-route-type="post" class="dropdown-item">Post</a></li>
                        <li><a asp-page="/Compose" asp-route-type="journal" class="dropdown-item">Journal Entry</a></li>
                    </ul>
                </div>
            </div>
        </header>

        <!-- Content -->
        <main class="atomic-content flex-grow-1">
            @RenderBody()
        </main>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/typeahead/jquery.typeahead.min.js"></script>
<script src="~/js/site.js"></script>

<script>
    $(function () {
        $.typeahead({
            input: '.js-typeahead',
            minLength: 1,
            dynamic: true,
            delay: 500,
            template: function (query, item) {
                console.log(item);
                return "{{title}}";
            },
            emptyTemplate: "No results for {{query}}",
            source: {
                items: {
                    display: ["name", "nameNormalized", "type", "aliases"],
                    ajax: function (query) {
                        return {
                            type: "POST",
                            url: "@Url.Page("Search", null, new { handler = "SearchPages" })",
                            headers: {
                                "RequestVerificationToken": $('input[name="__RequestVerificationToken"]').val()
                            },
                            data: {
                                query: "{{query}}"
                            }
                        }
                    }
                }
            },
            callback: {
                onClick: function (node, a, item, event) {
                    console.log(item);
                }
            }
        });
    });
</script>

@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
